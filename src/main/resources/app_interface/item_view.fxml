            <Label fx:id="restaurant_info" blendMode="SRC_ATOP" prefHeight="15.0" prefWidth="166.0" styleClass="iteminfo" text="Mo'men" translateX="20.0">
               <textFill>
                  <RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
                     <stops>
                        <Stop>
                           <color>
                              <Color />
                           </color>
                        </Stop>
                        <Stop offset="1.0">
                           <color>
                              <Color red="1.0" green="1.0" blue="1.0" />
                           </color>
                        </Stop>
                     </stops>
                  </RadialGradient>
               </textFill></Label>
         </children>
      </VBox>
   </children>
</AnchorPane>
