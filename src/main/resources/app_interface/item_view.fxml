<AnchorPane prefHeight="185.0" prefWidth="290.0" stylesheets="@restaurant_view.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app_interface.ItemView">
