<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="200.0" stylesheets="@admin.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app_interface.RestaurantDashboardFormController">
   <children>
      <VBox alignment="CENTER" prefHeight="493.0" prefWidth="410.0" spacing="50.0">
         <children>
            <VBox prefHeight="37.0" prefWidth="310.0">
               <children>
                  <Label styleClass="form-label" text="Name" />
                  <TextField fx:id="nameField" styleClass="form-field">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </TextField>
               </children>
            </VBox>
            <VBox prefHeight="27.0" prefWidth="300.0">
               <children>
                  <Label styleClass="form-label" text="Address" />
                  <TextField fx:id="addressField" styleClass="form-field">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </TextField>
               </children>
            </VBox>
            <VBox prefHeight="27.0" prefWidth="300.0">
               <children>
                  <Label styleClass="form-label" text="ContactInfo" />
                  <TextField fx:id="contactField" styleClass="form-field">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </TextField>
               </children>
            </VBox>
            <VBox prefHeight="60.0" prefWidth="310.0">
               <children>
                  <Label styleClass="form-label" text="Logo" />
                  <HBox prefHeight="42.0" prefWidth="310.0" spacing="10.0">
                     <children>
                        <TextField fx:id="imgField" editable="false" prefHeight="35.0" prefWidth="230.0" styleClass="form-field">
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </TextField>
                        <Button fx:id="chooseBtn" mnemonicParsing="false" onAction="#setImage" prefHeight="30.0" prefWidth="62.0" styleClass="cancel-btn" text="Choose" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="106.0" prefWidth="410.0" spacing="10.0">
               <children>
                  <Button fx:id="addBtn" mnemonicParsing="false" onAction="#addRestaurant" prefHeight="35.0" prefWidth="334.0" styleClass="add-btn" text="Add">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
                  <Button fx:id="cancelBtn" mnemonicParsing="false" onAction="#cancel" prefHeight="35.0" prefWidth="334.0" styleClass="cancel-btn" text="Cancel">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="30.0" left="50.0" right="50.0" top="35.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
